<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/Main">

    <activity
        android:id="@+id/Main"
        android:name="com.aviparshan.isequiz.View.Main"
        android:label="@string/app_name"
        tools:layout="@layout/recycler_view">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/WeekView" />
    </activity>
    <activity
        android:id="@+id/WeekView"
        android:name="com.aviparshan.isequiz.View.WeekView"
        android:label="@string/week"
        tools:layout="@layout/recycler_view">

<!--        action to go back to Main-->
        <action
            android:id="@+id/action_weekView_to_main"
            app:destination="@id/Main" />
    </activity>
</navigation>